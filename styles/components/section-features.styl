.crowdspot-features-section--community
	background-size 800px
	background-position bottom right
	background-image url('img/community-background.svg')

.crowdspot-features-section--insights
	background-size 800px
	background-position bottom left
	background-image url('img/insights-background.svg')
	
	
.crowdspot-features-row
	display flex
	// align-items center
	flex-wrap wrap
	padding-top 2em
	padding-bottom 2em
	
.crowdspot-features-row--alt
	
	+above('l')
		flex-direction row-reverse
		
		.crowdspot-features__list
			padding-right 0em
			padding-left 2em
		
