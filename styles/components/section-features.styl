.section-crowdspot-features
	// background-image linear-gradient(-223deg, rgba(255,255,255,0.50) 0%, rgba(0,255,39,0.50) 100%), radial-gradient(circle at top left, #284EF6, #FF0000);
	// background-image linear-gradient(180deg, #4A4F4C 0%, black 100%)
	// background-color black
	// background-color #F4F4F4
	position relative
	background linear-gradient(-45deg, rgba(#4E8146, 1), rgba(#E26F86, 1) 90%), linear-gradient(45deg, rgba(#E26E87, 1), rgba(#50834E, 1) 90%)
	color white
	
	h2
		color white
		
.crowdspot-features__list
	lost-column 5/12
	margin-top -1.5em
	
.crowdspot-features__list__category-title
	text-align center
	fs rem(24px)
	font-weight 600
	margin-top 1.5em
	margin-bottom 1em
	
.crowdspot-features__list__item
	lost-utility clearfix
	margin-bottom 1em
	cursor pointer
	opacity 0.75
	transition opacity 0.5s ease
	
	&:hover, &.active
		opacity 1

.crowdspot-features__list__item__thumbnail
	lost-column 2/12
	
	img
		width 60px
		border-radius 50%
		box-shadow 2px 2px 4px 0 rgba(black, 0.18)
		
.crowdspot-features__list__item__text
	lost-column 10/12
	
.crowdspot-features__list__item__text__title
	font-weight 700
	fs rem(18px)
	padding-top 0.5em
	padding-bottom 0.5em

.crowdspot-features__list__item__text__expandable
	font-weight 300
	fs rem(18px)
	display none

.crowdspot-features__images
	lost-column 6/12
	lost-offset -1/12
	
	.crowdspot-features__images__container
		&.fixer
			position fixed
			top 20%
		&.stop
			position absolute
			bottom 150px
		

	
	img
		margin-right -90%
		max-width 200%