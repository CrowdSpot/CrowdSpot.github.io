.section-crowdspot-features
	// background-image linear-gradient(-223deg, rgba(255,255,255,0.50) 0%, rgba(0,255,39,0.50) 100%), radial-gradient(circle at top left, #284EF6, #FF0000);
	// background-image linear-gradient(180deg, #4A4F4C 0%, black 100%)
	// background-color black
	// background-color #F4F4F4
	position relative
	background linear-gradient(-45deg, rgba(#4E8146, 1), rgba(#E26F86, 1) 90%), linear-gradient(45deg, rgba(#E26E87, 1), rgba(#50834E, 1) 90%)
	color white
	overflow hidden
	
	padding-top 2em
	padding-bottom 2em
	
	.gradientAnimatedBird
		width 47px
		margin-bottom -18px
		margin-left 0.5em
		
		+above('m')
			width 67px
			margin-bottom -15px
			margin-left 1em
	
	h2
		color white
		
.crowdspot-features__list
	// lost-column 5/12
	
	+above('m')
		lost-column 6/12
		margin-top -1.5em
		
	+above('l')
		lost-column 5/12
	// background-color red
	
.crowdspot-features__list__category-title
	text-align center
	fs rem(24px)
	font-weight 600
	margin-top 1.5em
	margin-bottom 1em
	
.crowdspot-features__list__item
	lost-utility clearfix
	margin-bottom 1em
	
	transition opacity 0.5s ease
	
	+above('m')
		cursor pointer
		opacity 0.75
	
	&:hover, &.active
		opacity 1

.crowdspot-features__list__item__thumbnail
	lost-column 3/12
	
	+above('m')
		lost-column 3/12
		
	+above('l')
		lost-column 2/12
	
	img
		width 80px
		// border-radius 50%
		// box-shadow 2px 2px 4px 0 rgba(black, 0.18)
		
.crowdspot-features__list__item__text
	lost-column 9/12
	
	+above('m')
		lost-column 7/12
		
	+above('l')
		lost-column 9/12
	
.crowdspot-features__list__item__text__title
	font-weight 700
	fs rem(18px)
	padding-top 0.5em
	padding-bottom 0.5em

.crowdspot-features__list__item__text__expandable
	font-weight 300
	fs rem(18px)
	display none

.crowdspot-features__images
	display none
	
	+above('m')
		display block
		lost-column 6/12
		
	// +above('l')
	// 	lost-offset -1/12
	
	.crowdspot-features__images__container
		
		&.fixer
			position fixed
			bottom 1em
			
			left 1em
			right 1em
			
			+above('m')
				bottom auto
				left auto
				right auto
				
				top 220px
			
			
		&.stop
			position absolute
			top 100px
			
			+above('m')
				top auto
				bottom 100px
			
	img, video
		+above('m')
			margin-right -90%
			max-width 200%
		
	video
		padding-top 60px
		
.crowdspot-features__video
	position relative
	
	max-width 940px
	display none
	overflow hidden
	border-radius 5px
	box-shadow 2px 2px 5px rgba(black, 0.18)
	
	+above('m')
		margin-right -90%
	
	&:before
		content ''
		position absolute
		width 100%
		height 100px
		background-image url('img/browser-head@2x.png')
		background-repeat no-repeat
		background-size 940px
		z-index 10
		border-radius 5px
		
		
		