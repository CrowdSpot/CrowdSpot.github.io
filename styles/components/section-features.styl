.crowdspot-features__video
	position relative
	// width 50vw
	// max-width 940px
	display none
	overflow hidden
	border-radius 5px
	box-shadow 2px 2px 5px rgba(black, 0.18)

	// +above('m')
	// 	margin-right -90%

	&:before
		content ''
		position absolute
		width 100%
		height 8vw
		background-image url('img/browser-head@2x.png')
		background-repeat no-repeat
		background-size 100%
		z-index 10
		border-top-left-radius 5px
		border-top-right-radius 5px

