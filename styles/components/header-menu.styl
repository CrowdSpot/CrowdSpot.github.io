.site-header
	position fixed
	left 0
	right 0
	top 0
	z-index 10000
	background-color rgba(white, 0.95)
	padding 1em 0
	box-shadow 0 0 20px 0 rgba(black, 0.2)
	opacity 0

.site-header__inner
	display flex

.site-header__logo
	// padding 1em 0
	flex auto
	opacity 0
	
.site-header__menu-items
	flex auto
	justify-content space-between
	display flex
	max-width 600px
	
	a
		color grey
		text-decoration none
		font-weight 700
		fs rem(14px)

.site-header__menu-items__menu-item
	align-self flex-end