	h2
		color white
	
	
.projects-tabs
	lost-utility clearfix
	margin-bottom 2em
	margin-left auto
	margin-right auto
	max-width 940px
	
.projects-tab
	lost-column 1/5
	text-align center
	fs rem(14px)
	line-height 1.25
	opacity 0.5
	transition opacity 0.5s ease
	color white
	
	&.active, &:hover
		opacity 1
		cursor pointer
		
		// .slick-slider--projects__tab-title
		// 	font-weight 600
	
.projects-tab-images
	max-width 105px
	width 100%
	margin auto
	border-radius 50%
	box-shadow 2px 2px 4px 0 rgba(black, 0.18)
	margin-bottom 1em

.slick-slider--projects
	margin-bottom 0
	
.project-slide__container
	margin-left auto
	margin-right auto
	max-width 940px
	
.project-slide__image
	margin-left auto
	margin-right auto
	margin-bottom 3em

.project-slide__details
	lost-column 3/6

.project-slide__title
	text-align center
	font-weight 600
	fs rem(24px)
	color black
	margin-bottom 1.5em

.project-slide__stat
	lost-column 1/6
	text-align center

.project-slide__stat__icon
	height 100px
	position relative
	margin-bottom 0.5em

	i
		position absolute
		top auto
		bottom 0
		left 50%
		transform translateX(-50%)

.project-slide__stat__label
	color #D12325
	font-weight 700
	fs rem(18px)
	margin-bottom 0.3em
	
.project-slide__stat__value
	fs rem(24px)
	font-weight 700
	
.slick-slider--project-sub-slider
	margin-bottom 1.5em

.slick-dots
	bottom -1em